{% extends "master.twig" %}
{% block master_content %}
    <div class="container wide">
        <div class="row">
            {% include "header.twig" %}
        </div>
        <div class="row">
            <div class="col-main">
                {% block content_wrapper %}{% block content %}{% endblock %}{% endblock %}
            </div>
        </div>
        <div class="row">
            <div class="col-sidebar clearfix">
                {% include "sidebar_wide.twig" %}
            </div>
        </div>
        <div class="row">
            {% include "footer.twig" %}
        </div>
    </div>
{% endblock %}
