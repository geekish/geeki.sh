{% extends "wide.twig" %}
{% block content_wrapper %}
<div class="post">
    <h1 class="post-title">
        <span>{{ page.title }}</span>
        <small class="meta">
            {{ page.date | date("F jS Y")}}
            {% if page.meta.categories %}&middot;{% for category in page.meta.categories %}
            <a href="{{ site.url }}/category/{{ category|url_encode(true) }}">{{ category }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}{% endif %}
        </small>
    </h1>
    <div>
        {{ page.blocks.content|raw }}
    </div>
    <hr>
</div>
{% include "comments.twig" %}
<div class="post-pagination row">
    <div class="col-md-6 post-pagination-item older">
        {% if page.next_post %}
        <a href="{{ site.url }}{{ page.next_post.url }}">Next Post</a>
        {% else %}
        <span>Next Post</span>
        {% endif %}
    </div>
    <div class="col-md-6 post-pagination-item newer">
        {% if page.previous_post %}
        <a href="{{ site.url }}{{ page.previous_post.url }}">Previous Post</a>
        {% else %}
        <span>Previous Post</span>
        {% endif %}
    </div>
</div>
{% endblock %}
